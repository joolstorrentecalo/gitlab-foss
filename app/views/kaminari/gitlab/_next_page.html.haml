-#  Link to the "Next" page
-#  available local variables
-#    url:           url to the next page
-#    current_page:  a page object for the currently displayed page
-#    total_pages:   total number of pages
-#    per_page:      number of items to fetch per page
-#    remote:        data-remote

- is_last_page = current_page.last?

%li{ class: ('disabled' if is_last_page), 'aria-disabled': ('true' if is_last_page), 'aria-hidden': ('true' if is_last_page) }
  - if is_last_page
    %span.gl-pagination-item{ data: { testid: 'kaminari-pagination-next' } }
      = s_('Pagination|Next')
      = sprite_icon('chevron-right')
  - else
    = link_to url, rel: 'next', remote: remote, class: 'gl-pagination-item', data: { testid: 'kaminari-pagination-next' } do
      = s_('Pagination|Next')
      = sprite_icon('chevron-right')
